#!/bin/true
# vim:ft=bash:et:sts=2:sw=2:ts=2

cmus() {
  docker stop cmus || true
  docker run --rm -it \
             --device /dev/snd \
             --name cmus \
             -e "USERNAME=$USERNAME" \
             -v $HOME/Music:/music \
             docker/cmus:latest "$@"
}

ytdl() {
  docker run --rm -it \
             -v $HOME/Music:/media \
             filefrog/ytdl:latest "$@"
}
