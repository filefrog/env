#!/bin/true
# vim:ft=bash:et:sts=2:sw=2:ts=2

cmus() {
  docker stop cmus || true
  docker run --rm -it \
             --device /dev/snd \
             --name cmus \
             -e "USERNAME=$USERNAME" \
             -v $HOME/Music:/music \
             docker/cmus:latest "$@"
}

gpg() {
  docker run --rm -it \
             -l 'conky=[gpg]' \
             -u $UID \
             -v $HOME:/home \
             docker/gpg:latest "$@"
}

htop() {
  local name=htop
  docker stop $name &>/dev/null || true
  docker run --rm -it \
             --name $name \
             -u $UID \
             --pid=host \
             docker/htop htop "$@"
}

ytdl() {
  docker run --rm -it \
             -l 'conky=[ytdl]' \
             -v $HOME/Music:/media \
             filefrog/ytdl:latest "$@"
}
