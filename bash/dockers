#!/bin/true
# vim:ft=bash:et:sts=2:sw=2:ts=2

cmus() {
  local name=cmus
  docker stop $name &>/dev/null || true
  docker run --rm -it \
             --device /dev/snd \
             --name $name \
             -e "USERNAME=$USERNAME" \
             -v $HOME/Music:/music \
             docker/cmus:latest "$@"
}

gpg() {
  docker run --rm -it \
             -l 'conky=[gpg]' \
             -u $UID \
             -v $HOME:/home \
             docker/gpg:latest "$@"
}

htop() {
  local name=htop
  docker stop $name &>/dev/null || true
  docker run --rm -it \
             --name $name \
             -u $UID \
             --pid=host \
             docker/htop htop "$@"
}

verse() {
  local opts=
  local cmd=""
  if [[ -z "${1:-}" ]]; then
    opts="-p ${PORT:-4000}:4000"
    cmd=demo
  fi
  docker run --rm -it $opts \
             -l "conky=[verse]" \
             -u $UID \
             -v $PWD:/web -w /web \
             huntprod/verse $cmd "$@"
}

ytdl() {
  docker run --rm -it \
             -l 'conky=[ytdl]' \
             -v $HOME/Music:/media \
             filefrog/ytdl:latest "$@"
}
