#!/usr/bin/perl
use strict;
use warnings;

print "{";
my $sep = '';
my $mode = 'public';
my @sofar = ();
while (<>) {
	chomp;
	next unless $_;
	if (m/^-+ *BEGIN CERTIFICATE *-+$/) {
		die "Unexpected BEGIN CERTIFICATE found...\n" if $mode ne 'public';
		$mode = 'public';
	} elsif (m/^-+ *BEGIN PRIVATE KEY *-+$/) {
		if (@sofar) {
			my $s = join('\n', @sofar); @sofar = ();
			print qq($sep"$mode":"$s");
			$sep = ',';
		}
		die "Unexpected BEGIN PRIVATE KEY found...\n" if $mode ne 'public';
		$mode = 'private';
	}
	push @sofar, $_;
}
if (@sofar) {
	my $s = join('\n', @sofar); @sofar = ();
	print qq($sep"$mode":"$s");
}
print "}\n";
